<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
    <div id="rating-form">
      <label>Rating</label>
    </div>
    <%= f.input :comment %>
    <%= f.button :submit %>
<%end%>

<script type="text/javascript" charset="utf-8">
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>